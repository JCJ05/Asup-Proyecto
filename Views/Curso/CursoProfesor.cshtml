@model List<Curso>


@if(Model.Count == 0){

    <div class="alert alert-info">
        <p>No estas asignado a ningun curso como docente</p>
    </div>
}

@if(Model.Count > 0){

    <div class="alert alert-info">
        <p class="text-center">Estas asignado como docente a los siguientes @Model.Count cursos</p>
    </div>

    <div class="row">

    @foreach (var item in Model)
    {

          <div class="col-4">

             <div class="card" >

                    <img src="data:image/png;base64,@item.fileBase64" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.nombre</h5>
                        <p class="card-text">Profesor: @item.usuario.nombres</p>
                        <a class="btn btn-primary" asp-controller="Module" asp-action="verInfoCurso" asp-route-id="@item.Id">Ir al curso</a>
                    </div>

             </div>

       </div>
        
    }
      
     

    </div>
}