@model List<Pago>


@if(Model.Count == 0){

    <div class="alert alert-info">
       <p class="text-center"> No hay pagos pendientes registrados si tuviste un pago pendiente puede ser que este haya sido desaprobado.</p>
    </div>
}

@if(Model.Count > 0){

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Modalidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.monto</td>
                        <td>@item.fechaPago.ToString("dd/MM/yyyy")</td>
                        <td>@item.Status</td>
                        <td>@item.modalidad</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}