@model List<Proforma>

@{

  decimal total = ViewBag.sueldo;
}

@if(Model.Count == 0){
   
   <div class="alert alert-danger">
    
       <p class="text-center">No tienes ningun curso agregado a tu carrito de compras</p>

  </div>
   

}

  
@if(Model.Count > 0){
   
    <div class="alert alert-success">
     
         <p class="text-center">Tienes @Model.Count cursos agregados a tu carrito de compras</p>
    
    </div>

    <div>

        <table class="table table-striped">
             
             <thead>
                
                 <tr>
                    
                      <th>Imagen</th>
                      <th>Nombre</th>
                      <th>Precio</th>
                      <th>Eliminar</th>

                 </tr>

             </thead>


             <tbody>
                   
                     @foreach(var item in Model)
                     {
                     <tr>
                          
                          <td>
                              
                            <img src="data:image/png;base64,@item.curso.fileBase64" width="100px" height="100px" />
                            
                          </td>
    
                          <td>
                            
                             @item.curso.nombre
                            
                          </td>
    
                          <td>
                            
                               @item.curso.precio
                            
                          </td>
    
                          <td>
                            
                            <a onclick="consultDelete(@item.Id);" class="btn btn-danger">Eliminar</a>
                            
                          </td>
    
                     </tr>


                     }

             </tbody>

        </table>

    </div>
    
    <div>
        <p class="text-center">Total a pagar: $./@total</p>
    </div>

   <div>
        <a class="btn btn-warning" onclick="consultarModalidad()" >Pagar</a>
   </div>
}
  

